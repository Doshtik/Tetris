<Page x:Class="Tetris.Frames.GameRulesMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tetris.Frames"
      mc:Ignorable="d"
      d:DesignWidth="800" d:DesignHeight="600" 
      Foreground="White"
      FontFamily="Segoe UI Light" 
      FontSize="28"
      Title="GameRulesMenu">

    <Grid x:Name="GameRules"
          Visibility="Visible">

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF8B00FF"/>
                <GradientStop Color="#FFFF2F00" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock x:Name="TutorialTitle"
                       HorizontalAlignment="Center"
                       Style="{DynamicResource TutorialHead}"
                       FontSize="48"/>

            <Border Background="White"
                    CornerRadius="10"
                    Margin="0,10,0,10" 
                    Padding="10,10,10,10">

                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <StackPanel HorizontalAlignment="Center" 
                                Grid.Column="0"
                                Grid.Row="0"
                                Orientation="Horizontal">
                        <Image Source="../Assets/Button_Arrow.png" 
                                Width="48" 
                                RenderTransformOrigin="0.5,0.5"
                                Margin="10 0 10 0">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <RotateTransform Angle="-90"/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                        <Image Source="../Assets/Button_Arrow.png" 
                               Width="48" 
                               RenderTransformOrigin="0.5,0.5"
                               Margin="10 0 10 0">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <RotateTransform Angle="90"/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Center"
                                Grid.Column="0"
                                Grid.Row="1"
                                Orientation="Horizontal">
                        <Image Source="../Assets/Button_Arrow.png" 
                               Width="48" 
                               Margin="10 0 10 0">
                        </Image>
                        <Image Source="../Assets/Button_C.png" 
                               Width="48"
                               Margin="10 0 10 0">
                        </Image>
                    </StackPanel>

                    <Image HorizontalAlignment="Center"
                           Grid.Column="0"
                           Grid.Row="2"
                           Source="../Assets/Button_Arrow.png" 
                           Width="48" 
                           RenderTransformOrigin="0.5,0.5"
                           Margin="10 0 10 0">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <RotateTransform Angle="180"/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>

                    <Image HorizontalAlignment="Center"
                           Grid.Column="0"
                           Grid.Row="3"
                           Source="../Assets/Button_Space.png" 
                           Width="66">
                    </Image>

                    <Image HorizontalAlignment="Center"
                           Grid.Column="0"
                           Grid.Row="4"
                           Source="../Assets/Button_X.png" 
                           Width="48">
                    </Image>

                    <Image HorizontalAlignment="Center"
                           Grid.Column="0"
                           Grid.Row="5"
                           Source="../Assets/Button_ESC.png"
                           Width="48">
                    </Image>

                    <TextBlock x:Name="SideMovementTutorial"
                                VerticalAlignment="Center"
                                Grid.Column="1"
                                Grid.Row="0"
                                Margin="0 10 0 10"
                                Foreground="Black"
                                Style="{DynamicResource SideMovementTutorial}"/>
                    <TextBlock x:Name="RotationMovementTutorial"
                                VerticalAlignment="Center"
                                Grid.Column="1"
                                Grid.Row="1"
                                Margin="0 10 0 10"
                                Foreground="Black"
                                Style="{DynamicResource RotationMovementTutorial}"/>
                    <TextBlock x:Name="DownOneMovementTutorial"
                                VerticalAlignment="Center"
                                Grid.Column="1"
                                Grid.Row="2"
                                Margin="0 10 0 10"
                                Foreground="Black"
                                Style="{DynamicResource DownOneMovementTutorial}"/>
                    <TextBlock x:Name="DownSpaceMovementTutorial"
                                VerticalAlignment="Center"
                                Grid.Column="1"
                                Grid.Row="3"
                                Margin="0 10 0 10"
                                Foreground="Black"
                                Style="{DynamicResource DownSpaceMovementTutorial}"/>
                    <TextBlock x:Name="InHoldTutorial"
                                VerticalAlignment="Center"
                                Grid.Column="1"
                                Grid.Row="4"
                                Margin="0 10 0 10"
                                Foreground="Black"
                                Style="{DynamicResource InHoldTutorial}"/>
                    <TextBlock x:Name="InPauseTutorial"
                                VerticalAlignment="Center"
                                Grid.Column="1"
                                Grid.Row="5"
                                Margin="0 10 0 10"
                                Foreground="Black"
                                Style="{DynamicResource InPauseTutorial}"/>
                </Grid>
            </Border>
            <Button x:Name="bttnNextTutorial"
                    VerticalAlignment="Bottom" 
                    Style="{DynamicResource bttnNextTutorial}"
                    Click="BttnNext_Click"
                    Padding="10"
                    Background="White" 
                    BorderBrush="{x:Null}"/>
        </StackPanel>
    </Grid>
</Page>

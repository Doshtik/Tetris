<Window x:Class="Tetris.WindowRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Height="200" Width="250"
        MinHeight="100" MinWidth="100" 
        Foreground="White"
        FontFamily="Segoe UI Light"
        FontSize="22" 
        WindowStyle="ToolWindow"
        Closing="Window_Closing">
    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock x:Name="NameChange_TextBlock"
                       Foreground="Black"
                       Style="{DynamicResource NameChange_TextBlock}"/>
            <TextBox x:Name="NameChange_TextBox"
                     Width="150" Margin="0 10 0 10"
                     TextChanged="TextBox_TextChanged"/>
            <Button x:Name="bttn_Confirm"
                    Style="{DynamicResource  bttn_Confirm}"
                    Click="bttn_Confirm_Click"/>
        </StackPanel>
    </Grid>
</Window>
